# Production Classification API - Environment Configuration Example
# Copy this file to .env.development, .env.production, or .env.testing and customize

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=sqlite:///data/production.db
# For PostgreSQL: postgresql://user:password@localhost:5432/hp_classification
# For MySQL: mysql://user:password@localhost:3306/hp_classification

DB_POOL_TIMEOUT=20
DB_POOL_RECYCLE=-1
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# =============================================================================
# API SETTINGS
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_WORKERS=4
API_TIMEOUT=30

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_STORAGE_URL=memory://

# =============================================================================
# ML MODEL SETTINGS
# =============================================================================
MODEL_PATH=models/
CONFIDENCE_THRESHOLD=0.7
MODEL_CACHE_SIZE=3
MODEL_TIMEOUT_SECONDS=30
FEATURE_CONFIG_PATH=src/config.py

# =============================================================================
# SCRAPER SETTINGS
# =============================================================================
SCRAPER_DELAY=2.0
MAX_PAGES_PER_TERM=5
SCRAPER_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Search terms (comma-separated)
SEARCH_TERMS=cartucho hp original,toner hp,cartucho hp 664,cartucho hp 122,toner hp laserjet

# =============================================================================
# CRON JOB SETTINGS
# =============================================================================
CRON_SCHEDULE=0 */6 * * *
CRON_JOB_TIMEOUT=3600

# =============================================================================
# HEALTH MONITORING SETTINGS
# =============================================================================
HEALTH_CHECK_TIMEOUT=30
HEALTH_CACHE_DURATION=5
HEALTH_HISTORY_DAYS=7
RESOURCE_CHECK_INTERVAL=60

# Performance alert thresholds
CPU_ALERT_THRESHOLD=90
MEMORY_ALERT_THRESHOLD=90
DISK_ALERT_THRESHOLD=90
PROCESSING_TIME_ALERT_THRESHOLD=5000
LOW_CONFIDENCE_ALERT_THRESHOLD=0.5
SUCCESS_RATE_ALERT_THRESHOLD=0.8

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/production_api.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# REDIS SETTINGS (Optional - for caching and task queues)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SOCKET_TIMEOUT=30
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# CELERY SETTINGS (Optional - for background tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-here
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
SENTRY_DSN=
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true