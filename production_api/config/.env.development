# Development Environment Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///data/development.db

# API Settings
API_DEBUG=true
API_PORT=5000

# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/development.log

# Scraper (more conservative for development)
SCRAPER_DELAY=3.0
MAX_PAGES_PER_TERM=2

# Performance thresholds (lower for development testing)
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=80
DISK_ALERT_THRESHOLD=80
PROCESSING_TIME_ALERT_THRESHOLD=3000
LOW_CONFIDENCE_ALERT_THRESHOLD=0.3
SUCCESS_RATE_ALERT_THRESHOLD=0.7

# Rate limiting (more permissive in development)
RATE_LIMIT_PER_MINUTE=200